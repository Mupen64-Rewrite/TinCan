{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default-debug",
      "displayName": "Debug (Ninja)",
      "description": "Debug build using Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "default-release",
      "displayName": "Release (Ninja)",
      "description": "Release build using Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "win-vcpkg",
      "displayName": "Visual Studio + vcpkg",
      "description": "Windows build using VS2022 and vcpkg",
      "binaryDir": "${sourceDir}/build-vs",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "C:\\vcpkg\\scripts\\buildsystems\\vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static"
      },
      "generator": "Visual Studio 17 2022",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default-debug",
      "displayName": "Debug",
      "configurePreset": "default-debug"
    },
    {
      "name": "default-release",
      "displayName": "Release",
      "configurePreset": "default-release"
    },
    {
      "name": "win-debug",
      "displayName": "Debug",
      "configuration": "Debug",
      "configurePreset": "win-vcpkg"
    },
    {
      "name": "win-release",
      "displayName": "Release",
      "configuration": "Release",
      "configurePreset": "win-vcpkg"
    }
  ]
}